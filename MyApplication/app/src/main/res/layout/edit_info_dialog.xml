<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/info_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="昵称"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:ems="10"
        />
    <EditText
        android:id="@+id/info_list_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="性别"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/info_list_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="个性签名"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/info_list_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="生日"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/info_list_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/info_list_address"
        android:hint="地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:ems="10">
    </EditText>
</LinearLayout>

